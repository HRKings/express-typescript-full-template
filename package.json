{
  "name": "express-typescript-template",
  "version": "1.0.0",
  "description": "A basic starter template for a express API with typescript support",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "node dist/",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/index.ts",
    "lint": "eslint --ext 'ts' --fix src/",
    "test": "mocha",
    "knex": "knex --knexfile database/knexfile.ts --env main",
    "knex:seed:add": "knex --knexfile database/knexfile.ts --env main seed:make",
    "knex:migration:add": "knex --knexfile database/knexfile.ts --env main migrate:make"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HRKings/express-typescript-template.git"
  },
  "author": "HRKings (https://github.com/HRKings)",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/register": "^7.16.0",
    "@types/chai": "^4.2.22",
    "@types/chai-things": "^0.0.35",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "chai": "^4.3.4",
    "chai-things": "^0.2.0",
    "eslint": "^8.1.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.25.2",
    "mocha": "^9.1.3",
    "supertest": "^6.1.6",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "knex": "^0.95.12",
    "morgan": "^1.10.0",
    "pg": "^8.7.1"
  }
}
